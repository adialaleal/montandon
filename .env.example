# Configuração do Backend
PROJECT_NAME="Montandon"
API_V1_STR="/api/v1"

# Banco de Dados (Configuração interna do Docker, não precisa alterar se usar o script padrão)
DATABASE_URL=postgresql://montandon:montandon_secure_pass@db:5432/montandon

# Apify (Necessário para busca no Google Maps)
# Crie sua chave em: https://console.apify.com/
APIFY_API_KEY=sua_chave_apify_aqui
APIFY_ACTOR_ID=compass/crawler-google-places

# Evolution API (Integração com o WhatsApp do seu amigo)
# Se estiver rodando na mesma máquina, use host.docker.internal ou o IP da rede
EVOLUTION_API_URL=http://host.docker.internal:8080
EVOLUTION_INSTANCE_NAME=main
# Chave global do Evolution API dele
EVOLUTION_API_KEY=chave_global_do_evolution_aqui

# Configuração do Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
